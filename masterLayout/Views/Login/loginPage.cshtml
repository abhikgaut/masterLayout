@model masterLayout.Models.loginValidation
@{
    ViewBag.Title = "loginPage";
}

<h2>LOGIN</h2>
@using (Html.BeginForm("search","Login"))
{ 
<table>
    <tr>
        <td>username:</td>
        <td>@Html.TextBoxFor(a => a.Username)</td>
        <td>@Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })</td>
    </tr>
    <tr><td> &nbsp;   </td><td> &nbsp;   </td></tr>
    <tr>
        <td>password:</td>
        <td>@Html.TextBoxFor(a => a.Password)</td>
        <td>@Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })</td>
    <tr><td> &nbsp;   </td><td> &nbsp;   </td></tr>
    </tr>
    <tr><td></td><td><input type="submit" value="submit"></td></tr>
</table>
}
